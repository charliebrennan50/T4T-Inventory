<%- include('partials/header', { pageTitle: "Reports" }) %>

<h2 class="mt-4 mb-3 text-center">Donation Reports</h2>

<%
let colTotals = {
  boy02: 0,
  girl02: 0,
  boy35: 0,
  girl35: 0,
  boy68: 0,
  girl68: 0,
  boy911: 0,
  girl911: 0,
  boy1214: 0,
  girl1214: 0,
  book: 0,
  stuffie: 0,
  bike: 0
};
%>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Donor</th>
      <th>Boy 0-2</th>
      <th>Girl 0-2</th>
      <th>Boy 3-5</th>
      <th>Girl 3-5</th>
      <th>Boy 6-8</th>
      <th>Girl 6-8</th>
      <th>Boy 9-11</th>
      <th>Girl 9-11</th>
      <th>Boy 12-14</th>
      <th>Girl 12-14</th>
      <th>Book</th>
      <th>Stuffie</th>
      <th>Bike</th>
      <th>Inventory By</th>
      <th>Comments</th>
      <th>Row Total</th>
    </tr>
  </thead>
  <tbody>
    <% donations.forEach(d => { %>
      <tr>
        <td><%= d.donor %></td>
        <%
          let rowTotal = 0;
          for (let key in colTotals) {
            let val = parseInt(d[key]) || 0;
            rowTotal += val;
            colTotals[key] += val;
        %>
            <td><%= val %></td>
        <% } %>
        <td><%= d.inventory_by || "" %></td>
        <td><%= d.comments || "" %></td>
        <td><%= rowTotal %></td>
      </tr>
    <% }) %>

    <!-- Column totals row -->
    <tr>
      <td><strong>Total</strong></td>
      <% let grandTotal = 0; %>
      <% for (let key in colTotals) { %>
        <% grandTotal += colTotals[key]; %>
        <td><strong><%= colTotals[key] %></strong></td>
      <% } %>
      <td colspan="3"></td>
      <td><strong><%= grandTotal %></strong></td>
    </tr>
  </tbody>
</table>

<%- include('partials/footer') %>